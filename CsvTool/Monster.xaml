<local:BasePage x:Class="CsvTool.Monster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CsvTool"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="Monster">

    <Grid Name="baseGrid">
        <Label Content="怪物类型" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="MonsterTypeCB" Tag="怪物类型" SelectionChanged="MonsterTypeComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="怪物名称" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MonsterNameTB" Tag="怪物名称" PreviewKeyDown="MonsterTextBox_PreviewKeyDown" HorizontalAlignment="Left" Height="23" Margin="10,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="怪物ID" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MonsterIDTB" Tag="怪物ID" PreviewKeyDown="MonsterTextBox_PreviewKeyDown" HorizontalAlignment="Left" Height="23" Margin="10,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</local:BasePage>
